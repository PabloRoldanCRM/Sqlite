<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sqlite"
             x:Class="Sqlite.MainPage">

    <StackLayout Padding="40" HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
        <!-- Place new controls here -->
        <Label Text="Name" FontFamily="Console" />
        <Entry Placeholder="Someone" FontFamily="Console" PlaceholderColor="WhiteSmoke" x:Name="eName"/>
        <Label Text="E-mail" FontFamily="Console" />
        <Entry Placeholder="Someone@example.com"  FontFamily="Console" PlaceholderColor="WhiteSmoke" x:Name="eEmail"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Save" x:Name="btnSave"/>
            <Button Text="Retrieve" x:Name="btnRetrieve"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
